<%= simple_form_for [@city, @spot] do |f| %>
  <%= f.input :name %>
  <%= f.association :category, selected: 1 %>
  <%= f.input :sub_category %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :website %>
  <%= f.input :photo %>
  <%= f.submit %>
<% end %>
