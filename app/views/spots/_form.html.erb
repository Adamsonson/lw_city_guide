<%= simple_form_for [@city, @spot] do |f| %>
  <%= f.input :name %>
  <%= f.association :category %>
  <%= f.input :sub_category %>
  <%= f.input :description %>
  <%= f.input :address, input_html: { autocomplete: "off" } %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :phone_number %>
  <%= f.input :website %>
  <%= f.input :photo, label: "Upload an image", label_html: { class: "button button-secondary" }, input_html: { class: "button-file-upload" } %>
  <%= f.submit class: "button button-primary" %>
<% end %>
