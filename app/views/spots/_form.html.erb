<%= simple_form_for [@city, @spot] do |f| %>
  <%= f.input :name %>
  <%= f.association :category %>
  <%= f.input :sub_category %>
  <%= f.input :description %>
  <%= f.input :address, input_html: { autocomplete: "off" } %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :phone_number %>
  <%= f.input :website %>
  <%= cl_image_tag(@spot.photo.preview, class: "spacer-xs") if @spot.photo.present? %>
  <%= f.input :photo, folder: "city_guides/#{@spot.city.name}/",
                      tags: [@spot.city.name, @spot.category],
                      label: @spot.photo.present? ? "Change image" : "Upload an image",
                      label_html: { class: "button button-secondary" },
                      input_html: { class: "button-file-upload" } %>
  <%= f.submit class: "button button-primary" %>
<% end %>
