var refreshSpotCard = (innerHTML) => {
  const newSpotCard = document.querySelector(".spot");
  newSpotCard.innerHTML = innerHTML;
}

var refreshHeader = (innerText) => {
  const newEditHeader = document.querySelector(".js-edit-header");
  newEditHeader.innerText = innerText;
}

var refreshForm = (innerHTML) => {
  const newEditForm = document.querySelector(".edit_spot");
  newEditForm.innerHTML = innerHTML;
}

<% if @spot.errors.any? %>
  refreshForm("<%= j render 'form' %>");
<% else %>
  refreshSpotCard("<%= j render 'spot' %>");
  refreshHeader("Edit <%= @spot.name %>");
  refreshForm("<%= j render 'form' %>");
<% end %>
