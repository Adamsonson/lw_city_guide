<%= content_for(:title, "Request Reset Password Link") %>
<div class="wrapper-form">
  <h2 class="text-center spacer-md">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs spacer-md">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions button-center spacer-md">
      <%= f.button :submit, "Send me reset instructions", class: "button button-primary button-big" %>
    </div>
  <% end %>

  <div class="caret-link">
    <%= show_svg("caret_left.svg") %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "link-primary" %><br />
  </div>
</div>
