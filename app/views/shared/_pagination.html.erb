<% link = pagy_link_proc(pagy) %>

<nav aria-label="pager" class="pagy_nav pagination" role="navigation">
  <% if pagy.prev %>
    <span class="page prev">
      <%== link.call(pagy.prev, show_svg("caret_circle_left.svg"), 'aria-label="previous"') %>
    </span>
  <% else %>
    <span class="page prev disabled"><%= show_svg("caret_circle_left.svg") %></span>
  <% end %>

  <% if pagy.next %>
    <span class="page next">
      <%== link.call(pagy.next, show_svg("caret_circle_right.svg"), 'aria-label="next"') %>
    </span>
  <% else %>
    <span class="page next disabled"><%= show_svg("caret_circle_right.svg") %></span>
  <% end %>
</nav>
