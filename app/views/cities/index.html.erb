<div class="cities">
  <div class="cities__header" style="background-image: url('<%= image_path "cities_background.svg" %>')">
    <h1>Explore Spain</h1>
  </div>
  <div class="cities__main">
    <% for city in @cities %>
      <%= link_to city_path(city), class: "card-wrap" do %>
        <div class="card-spot spacer-xs">
          <%= image_tag "#{city.name.downcase}.jpeg", class: "card-spot__photo" %>
          <div class="card-spot__text">
            <p><%= city.name %></p>
            <p><%= city.spots.count %> spots</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
