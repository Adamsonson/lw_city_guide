<%= simple_form_for(@city) do |f| %>
  <%= f.input :name %>
  <%= f.input :country %>
  <%= f.input :remote_photo_url %>
  <%= f.input :photo, label: "Upload an image", label_html: { class: "button button-secondary" }, input_html: { class: "button-file-upload" } %>
  <%= f.submit class: "button button-primary" %>
<% end %>
